# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/zoom_questions

# Zoom Server-to-Server OAuth Credentials
ZOOM_ACCOUNT_ID=your_zoom_account_id_here
ZOOM_CLIENT_ID=your_zoom_client_id_here
ZOOM_CLIENT_SECRET=your_zoom_client_secret_here

# Zoom Chatbot JID (Required for sending to meeting chat)
# Get this from your Zoom Chatbot app settings
# Format: v1aBcDeFgHiJkL1234567890@xmpp.zoom.us
ZOOM_BOT_JID=your_chatbot_jid_here

# Base URL for your application
BASE_URL=http://localhost:5000

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
PORT=5000

# Zoom Webhook Secret Token (for signature verification)
ZOOM_WEBHOOK_SECRET=your_webhook_secret_token_here

